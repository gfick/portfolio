<!DOCTYPE html>
<html lang="en-us">
  <head>
    <% include head.ejs %>
  </head>

  <body>

    <div class="container grey lighten-3 z-depth-1">

      <% include navbar.ejs %>

      <div class="row">
        <div class="col s12 m12 l12">
          <div class="plu-mapper-container black-text valign">

            <form method="post" type="post" action="/">
              <div class="input-field col s3">
                <input placeholder="Example: 4112" id="plu_code" type="text" class="autocomplete-plu-code">
                <label for="plu_code">PLU Code</label>
              </div>
              <div class="input-field col s3">
                <input placeholder="Brazil" id="country_of_origin" type="text" class="autocomplete-country-of-origin">
                <label for="country_of_origin">Country of Origin</label>
              </div>
              <div class="input-field col s3">
                <input placeholder="Happy Farm" id="farm_name" type="text" class="validate">
                <label for=farm_name>Farm Name</label>
              </div>
              <div class="input-field col s3 center">
                <input class="btn teal accent-4 black-text waves-effect waves-light z-depth-1" type="submit" value="Submit"></input>
              </div>
            </form>

          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m12 l12">
          <div class="btn green black-text waves-effect waves-light z-depth-1" id="plu-cvs-to-json" onClick="csvHandler()">Generate JSON PLU Codes Object</div>
        </div>
      </div>

      <% include footer.ejs %>
      <script src="js/plu-mapper.js"></script>
  </body>
</html>